<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>

<VBox alignment="CENTER" spacing="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.171" fx:controller="gui.librarian.LibraryReports_UI.SubscriberStatusReport_Controller">
    <BarChart fx:id="subscriberStatusReportChart" title="Subscriber Status Report">
        <xAxis>
            <CategoryAxis label="Day of the Month" />
        </xAxis>
        <yAxis>
            <NumberAxis label="Number of Subscribers" />
        </yAxis>
    </BarChart>
    <Button fx:id="btnClose" mnemonicParsing="false" onAction="#handleClose" text="Close" />
    <HBox alignment="CENTER" />
</VBox>