<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.librarian.LibraryReports_UI.BorrowTimeReport_Controller">
    <BarChart fx:id="borrowingReportChart" title="Borrowing Report">
        <xAxis>
            <CategoryAxis label="Book Title" />
        </xAxis>
        <yAxis>
            <NumberAxis label="Time (days)" />
        </yAxis>
    </BarChart>
 	<Button fx:id="btnClose" mnemonicParsing="false" onAction="#handleClose" text="Close" />
    <HBox alignment="CENTER" />
       
</VBox>
